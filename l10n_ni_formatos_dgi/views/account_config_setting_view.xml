<odoo>
    <record id="l10n_ni_formatos_dgi_inherit_view_account_config_settings" model="ir.ui.view">
        <field name="name">Add l10n_ni_formatos_dgi configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block">
                    <h2>Formato fiscales DGI Nicaragua</h2>
                    <div class="row o_settings_container mt16">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="factura_venta" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="factura_venta" string="Factura de Venta con encabezado"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="nota_debito"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="nota_debito" string="Nota de débito con encabezado"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="nota_credito"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="nota_credito" string="Nota de crédito con encabezado"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="recibo_caja"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="recibo_caja" string="Recibo de caja con encabezado"/>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>