<odoo>
    <record id="l10n_ni_retenciones_inherit_view_account_config_settings" model="ir.ui.view">
        <field name="name">Add l10n_ni_retenciones configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block">
                    <h2>Formato de Retenciones</h2>
                    <div class="row o_settings_container mt16">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="report_retenciones" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="report_retenciones" string="Reporte de retenciones con encabezado"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>